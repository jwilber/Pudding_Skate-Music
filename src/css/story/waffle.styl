.waffle_col{
    float: left;
    width: 24%;
    height: 50%;
    /*border: 1px solid blue;*/
    overflow: hidden;
    margin: 20px 5px;
}

.waffle_row{
    width: 100%;
    height: 50%;
    /*margin: 50px 10px;*/
    /*border: 5px solid red;*/
}

.waffle_title {
    font-size: 20px;
    position: relative;
    left: 45%;
    -webkit-transform: translateX(-45%);
    -ms-transform: translateX(-45%);
    transform: translateX(-45%);
    text-align: left;
}

.waffle_main_title
  font-family 'Atlas Grotesk Web'
  font-size 24px
  margin 0px
  text-align center
  margin-top 4rem
.legend
  display flex
  text-align center
  justify-content center
  margin-top 1rem
  .legend_item
    font-size 12px
    font-family 'Atlas Grotesk Web'
    font-weight 500



.waffle_list {
    margin-left: 40px;
    list-style-type: circle;
}
