/* CUSTOM STORY STYLE */

.body_text 
	padding 10rem 1rem 0 1rem
	max-width 55rem
	margin 0 auto
	font-size 17px

.button
	font-family Gill Sans
	font-family arial
	font-weight bold
	background-color #e7e7e7
	padding 10px 15px
	text-align center
	border 1px solid black
	border-radius 8px


.button:hover
	background-color coral
	color white


.title
	font-family Gill Sans
	font-size 35px
	font-weight bold
	color black

#vis 
	padding-left 8%


#toolbar
	display flex

#genre, #use, .SearchBar 
	min-width 0

#genre 
	flex 0 150px

#use 
	flex 0 150px
	padding-left 10px

.SearchBar
	font-size 19px
	font-family Gill Sans
	font-family arial
	padding-top 7px
	font-weight bold
	flex 0 100px
	padding-left 250px

#search
	text-align left
	padding-left 5px
	padding-bottom 2px

.tooltipimage
	width 60px
	height 60px

.prose
	&__hed
		font-size 60px
	    line-height 1.2
	    margin-top .75rem
	    margin-bottom 1rem
	    max-width 90rem
